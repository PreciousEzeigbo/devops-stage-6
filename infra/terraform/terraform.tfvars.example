# AWS Configuration
aws_region    = "us-east-1"
vpc_id        = "vpc-xxxxxxxxx"
subnet_id     = "subnet-xxxxxxxxx"
instance_type = "t3.medium"

# Project Configuration
project_name = "devops-stage-6"
environment  = "production"

# SSH Configuration
ssh_public_key       = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQ..."
ssh_private_key_path = "~/.ssh/id_rsa"
ssh_user             = "ubuntu"
ssh_allowed_ips      = ["0.0.0.0/0"] # Restrict this in production

# Domain Configuration
domain     = "example.com"
acme_email = "admin@example.com"

# Application Configuration
jwt_secret = "your-secure-random-jwt-secret-here"

# GitHub Configuration
github_repo   = "https://github.com/yourusername/devops-stage-6.git"
github_branch = "main"

# Traefik Dashboard
traefik_dashboard_user     = "admin"
traefik_dashboard_password = "your-secure-password"

# Ansible Execution
run_ansible = true
